<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/modeTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/titan_one"
        android:gravity="center"
        android:text="@string/choose_mode"
        android:textColor="#FFFFFF"
        android:textSize="34sp" />

    <Button
        android:id="@+id/randomButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:fontFamily="@font/titan_one"
        android:onClick="startRandomProgress"
        android:text="@string/random_progress"
        android:textSize="24sp" />

    <Button
        android:id="@+id/pongButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:backgroundTint="#FF5722"
        android:fontFamily="@font/titan_one"
        android:onClick="startPongGame"
        android:text="@string/pong_game"
        android:textSize="24sp" />

    <Button
        android:id="@+id/squaresButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:backgroundTint="#4CAF50"
        android:fontFamily="@font/titan_one"
        android:onClick="startSquaresGame"
        android:text="SQUARES CLICKER"
        android:textSize="24sp" />
</LinearLayout>